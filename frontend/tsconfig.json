{
  "compilerOptions": {
    "jsx": "react-jsx",           // important
    "lib": ["dom", "dom.iterable", "esnext"], // s'assurer que DOM est inclus
    "types": ["react", "react-dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
