{
  "compilerOptions": {
    "types": ["react", "react-dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                // ✅ très important
  "exclude": ["node_modules"]
}
